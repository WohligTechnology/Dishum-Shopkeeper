                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="28dp"
                                android:id="@+id/imageView2"
                                android:src="@drawable/ic_action_sub"
